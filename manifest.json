{
  "manifest_version": 2,

  "name": "Download Helper",
  "description": "Provides various tools to assist with downloading sites and media",
  "version": "1.0",
  "options_page": "options.html",
  "background": {
    "scripts": ["settings.js","download.js","bg.js"]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["http://*/*",
        "https://*/*"
      ],
      "js": ["download.js","settings.js",
        "shared.js",
        "sites/alsscan.js",
        "sites/artstation.js",
        "sites/deviantart.js",
        "sites/ehentai.js",
        "sites/flickr.js",
        "sites/hentaifoundry.js",
        "sites/imgur.js",
        "sites/instagram.js",
        "sites/metart.js",
        "sites/minitokyo.js",
        "sites/patreon.js",
        "sites/pixiv.js",
        "sites/postimg.js",
        "sites/reddit.js",
        "sites/shimmie.js",
        "sites/tumblr.js",
        "content.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}