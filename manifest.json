{
  "manifest_version": 2,

  "name": "Download Helper",
  "description": "Provides various tools to assist with downloading sites and media",
  "version": "1.0",
  "options_page": "options.html",
  "background": {
    "scripts": ["settings.js","download.js","bg.js"]
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["http://*/*",
        "https://*/*"
      ],
      "js": ["download.js","settings.js","content.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}